<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="基本设置"
        android:iconSpaceReserved="false">
        <ListPreference
            android:entries="@array/detect_languages"
            android:entryValues="@array/detect_languages"
            android:key="settings_detect_language"
            android:title="识别语言"
            android:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:iconSpaceReserved="false"
        android:title="翻译设置">
        <SwitchPreference
            android:defaultValue="false"
            android:iconSpaceReserved="false"
            android:key="settings_trans_switch"
            android:summaryOff="仅识别"
            android:summaryOn="启用谷歌OCR+谷歌翻译"
            android:title="启用翻译" />
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="settings_trans_switch"
            android:key="settings_trans_select"
            android:title="使用百度翻译"
            android:iconSpaceReserved="false"/>
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="settings_trans_select"
            android:key="settings_trans_SBCS"
            android:summaryOff="翻译英文等"
            android:summaryOn="翻译日韩文等"
            android:title="全半角转换"
            android:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="进阶设置"
        android:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="false"
            android:key="settings_window_multiple"
            android:summary="滑动选择数目"
            android:summaryOff="已禁用"
            android:title="启用复数悬浮框"
            android:iconSpaceReserved="false"/>
        <SeekBarPreference
            android:dependency="settings_window_multiple"
            android:key="settings_window_number"
            android:max="4"
            app:adjustable="true"
            app:allowDividerBelow="false"
            app:min="1"
            app:seekBarIncrement="1" />
    </PreferenceCategory>


</PreferenceScreen>