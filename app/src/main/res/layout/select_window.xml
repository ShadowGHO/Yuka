<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testFloatScale"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:background="@color/translucent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sw_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/sw_ok"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:src="@drawable/ic_check" />

    <TextView
        android:id="@+id/translatedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="选取目标位置后点圈圈\n每次调整大小后都必须位移选词窗"
        android:textColor="@color/text_color_DarkBg"/>

    <com.wzy.yuka.tools.floatwindow.ScaleImageView
        android:id="@+id/sw_scale"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:src="@drawable/icon_scale" />
</RelativeLayout>